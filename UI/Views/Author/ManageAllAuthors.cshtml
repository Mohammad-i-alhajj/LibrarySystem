@using LibrarySystem.Domains.Entities
@{
    ViewData["Title"] = "Manage All Authors";
}
@model List<Author>

<div class="row">
    <div class="col">
        <form asp-controller="Author" asp-action="SearchByAuthorName" method="post">
            <div class="input-group mb-3">
                <input type="text" class="form-control" id="name" name="name" placeholder="Search By Author Name" aria-label="Search By Author Name" aria-describedby="basic-addon2">
                <div class="input-group-append">
                    <button class="btn btn-outline-primary" type="submit">Search</button>
                </div>
            </div>
        </form>
    </div>
</div>

<table class="table table-hover text-center align-middle">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Full Name</th>
            <th scope="col">Email</th>
            <th scope="col">Address</th>
            <th scope="col">Author Status</th>
            <th scope="col">CreatedAt</th>
            <th scope="col">UpdatedAt</th>
            <th scope="col">#</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Id</td>
                <td>@author.FullName</td>
                <td>@author.Email</td>
                <td>@author.Address</td>
                <td>@author.UserStatus</td>
                <td>@author.CreatedAt</td>
                <td>@author.UpdatedAt</td>
                <td>
                    <div class="dropdown">
                        <button class="btn btn-light rounded-3 fs-4" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            &#8942;
                        </button>
                        <ul class="dropdown-menu">
                            <li><a class="dropdown-item" asp-controller="Author" asp-action="UpdateAuthorInfo" asp-route-id="@author.Id">Edit</a></li>
                            <li><a class="dropdown-item" asp-controller="Author" asp-action="DeleteAuthor" asp-route-id="@author.Id">Logical Delete</a></li>
                        </ul>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>